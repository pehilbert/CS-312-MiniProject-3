<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Application</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>
<body>
    <% if (locals.user_id) { %>
        <div style="padding: 2rem; margin: 1rem auto; width: fit-content;">
            <p>Currently signed in as: <%= locals.user_id %></p>
            <a class="login-btn" href="/">Sign Out</a>
        </div>
        <form action="/create" method="POST" class="create-form-container">
            <button id="toggle-create-form" class="toggle-btn" type="button">+</button>
            <div id="create-form-body" class="create-form" style="display:none;">
                <h2>Create Post</h2>
                <label for="title">Title:</label>
                <input type="text" name="title" required class="input-field" />
                <label for="content">Content:</label>
                <textarea name="content" required class="input-field content-input"></textarea>
                <label for="category">Category:</label>
                <select required name="category" class="input-field">
                    <option value="" disabled selected>Select Category</option>
                    <option value="General">General</option>
                    <option value="Tech">Tech</option>
                    <option value="Lifestyle">Lifestyle</option>
                    <option value="Food">Food</option>
                    <option value="Travel">Travel</option>
                    <option value="Fashion">Fashion</option>
                </select>
                <input name="user_id" value="<%= locals.user_id %>" style="display:none" />
                <button type="submit" class="submit-btn">Post</button>
            </div>
        </form>
    <% } else { %>
        <div style="padding: 2rem; margin: 1rem auto; width: fit-content;">
            <a class="login-btn" href="/login">Log In to create posts</a>
        </div>
    <% } %>
    <div class="posts-container">
        <form method="GET" action="/">
            <select name="filter" class="input-field post-filter-input" onchange="this.form.submit()">
                <option value="" disabled selected>Filter by Category</option>
                <option value="General">General</option>
                <option value="Tech">Tech</option>
                <option value="Lifestyle">Lifestyle</option>
                <option value="Food">Food</option>
                <option value="Travel">Travel</option>
                <option value="Fashion">Fashion</option>
                <option value="">Show All</option>
            </select>
            <% if (locals.user_id) { %>
                <input name="user_id" style="display:none" value="<%= locals.user_id %>" />
            <% } %>
            <% if (locals.filter) { %>
                <p>Currently filtering by: <strong><%= locals.filter %></strong><br/><a href="/">Remove filter</a></p>
            <% } %>
        </form>
        <% if (locals.posts && locals.posts.length > 0) { %>
            <% locals.posts.forEach(function(post) { %>
                <div class="post">
                    <p class="post-category"><b><%= post.category %></b></p>
                    <h2 class="post-title"><%= post.title %></h2>
                    <p class="post-content"><%= post.content %></p>
                    <p class="post-author">By: <%= post.author %></p>
                    <p class="post-timestamp"><%= post.timestamp %></p>
                    <% if (locals.user_id && locals.user_id === post.author_id) { %>
                        <a href="/edit?id=<%= post.id %>&user_id=<%= locals.user_id %>" class="edit-btn">Edit</a>
                        <a href="/delete?id=<%= post.id %>&user_id=<%= locals.user_id %>" class="delete-btn">Delete</a>
                    <% } %>
                </div>
            <% }); %>
        <% } else { %>
            <p class="no-posts">No posts available. Click '<strong>+</strong>' to create one.</p>
        <% } %>
    </div>
    <script>
        const toggleBtn = document.getElementById('toggle-create-form');
        const createForm = document.getElementById('create-form-body');
        let formVisible = false;

        toggleBtn.addEventListener('click', function() {
            formVisible = !formVisible;
            createForm.style.display = formVisible ? 'flex' : 'none';
            toggleBtn.textContent = formVisible ? '-' : '+';
        });
    </script>
</body>
</html>